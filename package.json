{
  "name": "static-webiste",
  "version": "1.0.0",
  "description": "My discription",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "css:purge": "purgecss --css src/scss/bootstrap.min.css --content src/views/*.html src/views/components/*.html src/js/product-list.js --output dist/css/",
    "css:lint": "stylelint src/scss/*.scss --custom-syntax postcss-scss",
    "css:scss": "node-sass --output-style compressed -o dist/css src/scss",
    "css:autoprefixer": "postcss -u autoprefixer -r dist/css/*.css",
    "build:css": "npm run css:lint && npm run css:scss && npm run css:autoprefixer",
    "build:js": "webpack --mode=production",
    "build:html": "posthtml -c posthtml.json",
    "watch:css": "onchange \"src/scss\" -- npm run build:css",
    "watch:js": "onchange \"src/js\" --webpack --mode=development",
    "watch:html": "onchange \"src/views\" --npm run build:html",
    "serve": "browser-sync start --server \"dist\" --files \"dist\"",
    "build": "run-p build:*",
    "watch": "run-p serve watch:*"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "autoprefixer": "^10.4.4",
    "babel-loader": "^8.2.4",
    "browser-sync": "^2.27.9",
    "eslint": "^8.13.0",
    "eslint-webpack-plugin": "^3.1.1",
    "express": "^4.18.1",
    "htmlnano": "^2.0.2",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^9.1.0",
    "postcss-scss": "^4.0.3",
    "posthtml": "^0.16.6",
    "posthtml-cli": "^0.10.0",
    "posthtml-modules": "^0.8.1",
    "purgecss": "^4.1.3",
    "stylelint": "^14.6.1",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2"
  }
}
